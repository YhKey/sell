page{
  position: relative;
  height: 100%;
}

.blank{
  height: 42px;
}

.swiper-tab {
  width: 100%;
  /* border-bottom: 2rpx solid #777; */
  top: 0;
  position: fixed;
  z-index: 1;
  text-align: center;
  line-height: 80rpx;
  background: #fff;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  /* width: 20%; */
  color: #777;
  margin-right: 5%;
  margin-left: 5%;
}

.on {
  color: #da7c0c;
  border-bottom: 5rpx solid #da7c0c;
}
swiper-item {
display: block;
overflow: scroll;
will-change: transform;
}


.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow-x: hidden;
  overflow: scroll;
}

.swiper-box view {
  text-align: center;
}

.scrollers, .scrollView {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
}

/*订单列表*/

.orderDetails {
  background: #fff;
  border-bottom: 20rpx solid #f5f5f5;
}

.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #bebebe;
}

.orderListTitle .userName {
  padding-right: 450rpx;
  margin-left: 10px;
}

.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #2f7b27;
  font-size: 34rpx;
}

.orderListDetails {
  display: flex;
  height: 200rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.orderListDetails .productImg {
  flex: 1;
  height: 180rpx;
  width: 120px;
  margin-top: 20rpx;
  margin-left: 20rpx;
} 

.orderListDetails .productImg image {
  width: 100px;
  height: 90%;
}

.orderListDetails .productInfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
  font-size: 15px;
}

.orderListDetails .productInfo .productTitle {
  font-size: 15px;
  overflow: scroll;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10px;
}

.productCount {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 20rpx solid #f3f3f3;
}

.productCount>view {
  float: right;
  margin-right: 30rpx;
}
